<mvc:View xmlns:mvc="sap.ui.core.mvc" 
xmlns="sap.m" 
controllerName="namespacefiori.fioriapp.controller.MainView" 
displayBlock="true"
xmlns:core="sap.ui.core">

    <Page id="page" title="{i18n>title}">
       <!-- <headerContent>
                <Button xmlns="sap.m" id="Button1"  icon="sap-icon://activate"> </Button>
                <Button xmlns="sap.m" id="Button2"  icon="sap-icon://activate"> </Button>                 
            </headerContent>
        -->
        <content>
            <Panel id="_IDGenPanel1" headerText="{i18n>selectionScreen}">
                <Label id="labelShipName" labelFor="shipName" text="{i18n>shipName}" class="sapUiSmallMargin"></Label>
                <Input id="shipName" value="{selectionScreen>/ShipName}" width="200px" class="sapUiSmallMarginEnd"></Input>
                <Label id="labelCountry" text="{i18n>country}" class="sapUiSmallMargin"></Label>
                <!--<Select id= "slCountry" selectedKey="{selectionScreen>/CountryKey}" forceSelection="false" items="{selectionScreen>/Countries}">-->
                <Select id="slCountry" selectedKey="{selectionScreen>/CountryKey}" forceSelection="false" items="{selectionScreen>/Countries}">
                    <items>
                        <core:Item id="_IDGenItem1" key="{selectionScreen>key}" text="{selectionScreen>text}"/>
                    </items>
                </Select>
                <Button id="btnFilters"
                        text="{i18n>btnFilter}"
                        icon="sap-icon://filter"
                        press="onFilter"
                        class="sapUiSmallMarginEnd">
                </Button>
                <Button id="btnClearFilters"
                        text="{i18n>btnClearFilters}"
                        icon="sap-icon://clear-filter"
                        press="onClearFilter"
                        class="sapUiSmallMarginEnd">
                </Button>
            </Panel>
        </content>
        <Label id="label_1" text="texto de prueba"/>         
    </Page>
</mvc:View>